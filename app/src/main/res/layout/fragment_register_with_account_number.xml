<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RegisterWithAccountNumber">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="110dp"
            android:background="@drawable/login_card_bg"
            android:elevation="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Self Registration"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/subheading"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:text="with your account number"
                android:textColor="#3A3A3A"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/userMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/login_btn_bg"
                android:drawableStart="@drawable/baseline_local_phone_24"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:outlineSpotShadowColor="@color/black"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="#575656"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/login_btn_bg"
                android:drawableStart="@drawable/baseline_email_24"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:outlineSpotShadowColor="@color/black"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="#575656"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userAccountNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/login_btn_bg"
                android:drawableStart="@drawable/baseline_account_balance_24"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:ems="10"
                android:hint="Account Number"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textColorHint="#575656"
                android:textStyle="bold" />

            <View
                android:id="@+id/line_2"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:background="#575656" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit_button_Account"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_btn_main_bg"
                android:elevation="8dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>