<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.OneBanc" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Set the status bar color to white -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Use dark icons in the status bar (true = dark icons) -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Keep the navigation bar consistent if needed -->

    </style>

    <!-- Your custom app theme -->
    <style name="Theme.OneBanc" parent="Base.Theme.OneBanc" />

    <!-- Splash Screen Theme -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_icon</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.OneBanc</item>
    </style>
</resources>
