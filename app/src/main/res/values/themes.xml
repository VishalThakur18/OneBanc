<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.OneBanc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="android:statusBarColor">@color/primary_color</item>

        <!-- Always use dark icons, regardless of the theme -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.OneBanc" parent="Base.Theme.OneBanc" />

    <!-- Splash Screen Theme -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_icon</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.OneBanc</item>
    </style>
</resources>
